<h1><%= @doctor.name %></h1>
<h3><%= @doctor.department %></h3>

<ul>
<% @doctor.appointments.each do |a| %>
    <li>
        <%= a.appointment_datetime.strftime('%B %d, %Y') %> at <%= a.appointment_datetime.strftime('%H:%M') %> | <%= link_to a.patient.name, patient_path(a.patient) %>
    </li>
<% end %>
</ul>